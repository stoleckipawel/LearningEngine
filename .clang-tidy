Checks: >
  -*,

  # ------------------------------------------------------------------
  # Core diagnostics & static analysis
  # ------------------------------------------------------------------
  clang-diagnostic-*,
  clang-analyzer-*,

  # ------------------------------------------------------------------
  # Modern C++ usage & refactoring safety
  # ------------------------------------------------------------------
  modernize-*,

  # ------------------------------------------------------------------
  # Performance & code generation
  # ------------------------------------------------------------------
  performance-*,

  # ------------------------------------------------------------------
  # Bug detection
  # ------------------------------------------------------------------
  bugprone-*,

  # ------------------------------------------------------------------
  # Readability & consistency
  # ------------------------------------------------------------------
  readability-*,

  # ------------------------------------------------------------------
  # Safety, correctness & ownership
  # ------------------------------------------------------------------
  cppcoreguidelines-*,
  hicpp-*,
  cert-*,
  security-*,

  # ------------------------------------------------------------------
  # Portability & ABI hygiene
  # ------------------------------------------------------------------
  portability-*,

  # ------------------------------------------------------------------
  # Header, ODR & include discipline
  # ------------------------------------------------------------------
  misc-definitions-in-headers,
  misc-header-include-cycle,
  misc-include-cleaner,
  misc-non-private-member-variables-in-classes,
  misc-redundant-expression,
  misc-throw-by-value-catch-by-reference,

  # ------------------------------------------------------------------
  # Stronger type & language discipline
  # ------------------------------------------------------------------
  google-explicit-constructor,
  google-runtime-int,
  readability-implicit-bool-conversion,
  readability-qualified-auto,

  # ------------------------------------------------------------------
  # Engine-level correctness & lifetime pain detectors
  # ------------------------------------------------------------------
  cppcoreguidelines-owning-memory,
  cppcoreguidelines-no-malloc,
  cppcoreguidelines-pro-type-reinterpret-cast,
  cppcoreguidelines-pro-type-static-cast-downcast,
  cppcoreguidelines-avoid-do-while

WarningsAsErrors: '*'

HeaderFilterRegex: '.*'

AnalyzeTemporaryDtors: false

FormatStyle: none

CheckOptions:
  # ------------------------------------------------------------------
  # modernize
  # ------------------------------------------------------------------
  - { key: modernize-use-auto.MinTypeNameLength, value: '0' }
  - { key: modernize-use-nullptr.NullMacros, value: 'NULL' }
  - { key: modernize-use-trailing-return-type.ShortThreshold, value: '0' }
  - { key: modernize-avoid-bind.PlaceholderCount, value: '0' }

  # ------------------------------------------------------------------
  # cppcoreguidelines
  # ------------------------------------------------------------------
  - { key: cppcoreguidelines-avoid-magic-numbers.IgnoredValues, value: '0,1,-1' }
  - { key: cppcoreguidelines-pro-bounds-pointer-arithmetic.AllowedPointers, value: '' }
  - { key: cppcoreguidelines-owning-memory.AllowedIdentifiers, value: '' }

  # ------------------------------------------------------------------
  # performance
  # ------------------------------------------------------------------
  - { key: performance-move-const-arg.CheckTriviallyCopyable, value: 'true' }
  - { key: performance-unnecessary-value-param.AllowedTypes, value: '' }

  # ------------------------------------------------------------------
  # readability (implicit conversions)
  # ------------------------------------------------------------------
  - { key: readability-implicit-bool-conversion.AllowIntegerConditions, value: 'false' }
  - { key: readability-implicit-bool-conversion.AllowPointerConditions, value: 'false' }

  # ------------------------------------------------------------------
  # readability: identifier naming
  # ------------------------------------------------------------------
  - { key: readability-identifier-naming.FunctionCase, value: 'CamelCase' }
  - { key: readability-identifier-naming.MethodCase, value: 'CamelCase' }
  - { key: readability-identifier-naming.ClassCase, value: 'CamelCase' }
  - { key: readability-identifier-naming.StructCase, value: 'CamelCase' }
  - { key: readability-identifier-naming.EnumCase, value: 'CamelCase' }
  - { key: readability-identifier-naming.TypeCase, value: 'CamelCase' }

  - { key: readability-identifier-naming.VariableCase, value: 'camelCase' }
  - { key: readability-identifier-naming.LocalVariableCase, value: 'camelCase' }
  - { key: readability-identifier-naming.ParameterCase, value: 'camelCase' }

  - { key: readability-identifier-naming.MemberCase, value: 'camelCase' }
  - { key: readability-identifier-naming.MemberPrefix, value: 'm_' }

  - { key: readability-identifier-naming.BooleanParameterPrefix, value: 'b' }
  - { key: readability-identifier-naming.BooleanMemberPrefix, value: 'm_b' }

  # ------------------------------------------------------------------
  # hicpp
  # ------------------------------------------------------------------
  - { key: hicpp-no-assembler.Allowed, value: 'false' }
